@model IEnumerable<E_ProjectSem3.Models.Contest>

@{
    ViewBag.Title = "Contest | List";
}
<style>
    .checked {
        color: orange;
    }
</style>
<div class="col-lg-12 mb-4 mt-5" style="padding-left: 0px; padding-right: 0px;">
    <div class="card">
        <div class="card-header">
            <h6 class="text-uppercase mb-0">List Contests</h6>
        </div>
        <div class="card-body">
            <table class="data-table table table-striped table-hover card-text">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>
                        <th>Image</th>
                      
                        <th>Number of tests</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="contest-item" data-url="/admin/contestdetail/@(item.Id)">
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div style="display: flex; align-items: center">
                                    <img style="width: 50px; height: 50px; margin-right:10px" src="@(item.Image)" alt="Image" />
                                </div>

                            </td>
                          
                            <td>
                                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndDate)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Content/js/data-table.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.data-table').DataTable();
            $('.contest-item').click(function () {
                location.href=$(this).data('url')
            })
            
        });

    </script>
}


