@model IEnumerable<E_ProjectSem3.Models.OrderInfo>

@{
    ViewBag.Title = "StatisticsVip";
    int i = 1;
}

<div class="col-lg-12 mb-4 mt-5" style="padding-left: 0px; padding-right: 0px;">
    <div class="card">
        <div class="card-header">
            <h6 class="text-uppercase mb-0">Statistics Vip</h6>
        </div>
        <div class="card-body">
            <table class="data-table table table-striped table-hover card-text">
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        User
                    </th>
                    <th>Amount</th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDescription)
                    </th>
                   
                    <th>CreatedAt</th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @(i)

                </td>
                <td>
                   @* @(item.ApplicationUser.FirstName + " " + item.ApplicationUser.FirstName)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
            </tr>
                            @(i++);
                        }

            </table>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Content/js/data-table.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.data-table').DataTable();
        });
    </script>
}
